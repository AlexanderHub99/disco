@model GuesResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width"/>
    <title>RsvpForm</title>
</head>
<body>
<div class="panel panel-heading ">
    <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body text-center" >
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">Your mame:</label>
                        <input asp-for="Name">
                    </div>
                   <div class="form-group">
                        <label asp-for="Email">Your email:</label>
                        <input asp-for="Email">
                     </div>
                    <div class="form-group">
                        <label asp-for="Phone">Your phone:</label>
                        <input asp-for="Phone">
                     </div>
                <div class="form-group">
                    <label>Will you attend?</label>
                    <select class="form-control text-center" asp-for="WillAttend">
                        <option value="">Choose an option</option>
                        <option value="true">Yes, I'll be htere.</option>
                        <option value="false">No, I con't come.</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Snbmit RSVP.</button>
                </div>
            </form>
        </div>
    
</div>
</body>
</html>